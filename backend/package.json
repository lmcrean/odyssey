{
  "name": "odyssey-backend",
  "version": "1.0.0",
  "description": "Odyssey Backend - TypeScript Express server with Vite, Vitest, Playwright, SQLite",
  "main": "dist/server.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "npm i && nodemon --exec ts-node src/server.ts",
    "dev:e2e": "npm i && cross-env PORT=5005 nodemon --exec ts-node src/server.ts",
    "start": "node dist/server.js",
    "db:init": "tsx src/db/init.ts",
    "db:init:sqlite": "tsx src/db/init-sqlite.ts",
    "db:reset": "tsx src/scripts/reset-db.ts",
    "db:migrate": "tsx src/scripts/run-migrations.ts",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run -t unit",
    "test:dev": "npx playwright test e2e/master-integration.spec.ts -c playwright.dev.config.ts",
    "test:dev:verbose": "npx playwright test e2e/master-integration.spec.ts -c playwright.dev.config.ts --reporter=list --headed",
    "test:prod": "npx playwright test e2e/master-integration.spec.ts -c playwright.prod.config.ts",
    "test:prod:verbose": "npx playwright test e2e/master-integration.spec.ts -c playwright.prod.config.ts --reporter=list --headed",
    "deploy:vercel": "vercel deploy --prod",
    "vercel-build": "npm run build"
  },
  "keywords": [
    "express",
    "typescript",
    "vite",
    "vitest",
    "playwright",
    "sqlite",
    "vercel"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/bcryptjs": "^3.0.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.6.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "pg": "^8.13.1",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.0.0",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^3.1.2",
    "@vitest/ui": "^3.1.2",
    "axios": "^1.9.0",
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.9",
    "supertest": "^7.1.0",
    "ts-node": "^10.9.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vitest": "^3.1.2"
  }
}
